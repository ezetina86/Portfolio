---
const skills = {
  'Cloud Platforms': ['AWS', 'Azure', 'GCP'],
  'DevOps Tools': ['Kubernetes', 'Docker', 'Terraform', 'Jenkins', 'Git', 'CI/CD'],
  'Big Data': ['Apache Spark', 'Apache Hadoop', 'Apache Kafka', 'Airflow'],
  'Languages': ['Python', 'Bash', 'SQL', 'JavaScript'],
  'Databases': ['PostgreSQL', 'MySQL', 'MongoDB', 'Redis'],
  'Other': ['Linux', 'Networking', 'Security', 'Agile Methodologies']
};

const categoryColors = {
  'Cloud Platforms': 'brand-cloud',
  'DevOps Tools': 'brand-devops',
  'Big Data': 'brand-data',
  'Languages': 'brand-python',
  'Databases': 'primary',
  'Other': 'secondary'
}
---

<section id="skills" class="py-20 sm:py-32 bg-gray-900/50 animate-on-scroll">
  <div class="container mx-auto px-8">
    <h2 class="text-4xl font-bold font-heading text-center animate-on-scroll">Technical Skills</h2>
    <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 stagger-children">
      {Object.entries(skills).map(([category, items], index) => (
        <div class="bg-base-bg p-6 rounded-lg shadow-lg border border-gray-700/50 animate-on-scroll" style={`--stagger-index: ${index};`}>
          <h3 class={`text-2xl font-bold font-heading text-${categoryColors[category]}`}>{category}</h3>
          <ul class="mt-4 flex flex-wrap gap-2">
            {items.map(item => (
              <li class="bg-gray-700 text-gray-300 py-1.5 px-3 rounded-md text-sm font-medium transition-all duration-300 hover:bg-primary hover:text-white">
                {item}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>