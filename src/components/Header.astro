---
const navLinks = [
  { href: '#about', label: 'About' },
  { href: '#education', label: 'Education' },
  { href: '#skills', label: 'Skills' },
  { href: '#projects', label: 'Projects' },
  { href: '#certifications', label: 'Certs' },
  { href: '#experience', label: 'Experience' },
  { href: '#contact', label: 'Contact' },
];
---
<header id="main-header" class="fixed top-0 left-0 w-full z-50 transition-all duration-300">
  <div class="container mx-auto px-8 flex justify-between items-center h-20">
        <a href="#" class="text-2xl font-bold font-heading text-primary">EZ</a>
    <nav class="hidden md:flex gap-8">
      {navLinks.map(link => (
        <a href={link.href} class="text-gray-300 hover:text-primary transition-colors">{link.label}</a>
      ))}
    </nav>
    <!-- Mobile nav button -->
    <button id="mobile-nav-toggle" class="md:hidden text-gray-300 hover:text-primary">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
    </button>
  </div>
</header>

<script>
  const header = document.getElementById('main-header');
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header.classList.add('bg-base-bg/80', 'backdrop-blur-sm', 'shadow-lg');
    } else {
      header.classList.remove('bg-base-bg/80', 'backdrop-blur-sm', 'shadow-lg');
    }
  });
</script>